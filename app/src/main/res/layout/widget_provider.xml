<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin"
    android:background="@color/colorWidgetBackground">

    <ImageView
        android:id="@+id/ivWidgetRecipeIcon"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:src="@drawable/browines"
        android:contentDescription="@string/recipe_icon"/>

    <TextView
        android:id="@+id/widget_ingredients"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="8dp"
        android:background="@color/colorWidgetBackground"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:text="@string/you_will_ingredients_of_latest_recipe_you_open_here"/>

</LinearLayout>